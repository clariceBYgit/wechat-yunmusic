/* pages/recommendSong/recommedSong.wxss */
.recommendSongContainer .header{
    width: 100%;
    height: 300rpx;
    /* position: relative; */
}
.recommendSongContainer .header image{
    width: 100%;
    height: 100%;
}
.recommendSongContainer .header .date{
    /* position: absolute; */
    width: 200rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    transform: translate(300rpx, -200rpx);
    color: #fff;
}
.recommendSongContainer .header .date .day{
    font-size: 38rpx;
}

/* 列表区域 */
.ListContainer{
    position: relative;
    top: -20rpx;
    padding: 0 10rpx;
    border-radius: 30rpx;
    background: #fff;
   
}
.ListContainer .listHeader{
    height: 80rpx;
    line-height: 80rpx;
}
.ListContainer .changeMore{
    float: right;
}

/*内容区域  */
.listScroll{
    height: calc(100vh - 190 * 2rpx); 
}
.scrollItem{
    display: flex;
    position: relative;
    margin-bottom:20rpx ;

}
.scrollItem image{
    width: 100rpx;
    height: 80rpx;
    border-radius: 8rpx;
}
.musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    
    
}
.musicInfo text{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 400rpx;
/* 单行溢出省略号代替 */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.scrollItem .iconfont{
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    text-align: right;
    line-height: 80rpx;
 
    
}